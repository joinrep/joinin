<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="100dp"
            android:layout_height="170dp"
            android:background="@color/colorAccent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_category_bike"
            android:tint="@color/black_54"
            android:padding="8dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/eventImage"
            android:text="13 MAR"
            android:gravity="center"
            android:textStyle="normal"
            android:textColor="@color/white_100"
            android:background="#80000000"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/eventImage" />

        <LinearLayout
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eventImage"
            android:orientation="vertical"
            android:padding="@dimen/keyline_1">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/eventImage"
                android:gravity="left"
                android:text="Tylko 15 znakow!"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textColor="@color/black_87"
                android:textSize="24sp"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/eventAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/eventImage"
                android:gravity="left"
                android:text="Park szeroki"
                android:textStyle="normal"
                android:textColor="@color/black_54"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/eventImage"
                android:gravity="left"
                android:text="11:00-13:00"
                android:textStyle="normal"
                android:textColor="@color/black_87"
                android:textSize="16sp"
                />
        </LinearLayout>

        <View
            android:id="@+id/divier"
            android:layout_toRightOf="@id/eventImage"
            android:layout_below="@id/cardContent"
            style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eventImage"
            android:layout_below="@id/divier"
            android:orientation="vertical"
            android:paddingBottom="0dp">

            <Button
                android:id="@+id/btnParticipate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_vertical"
                android:text="@string/join"
                android:gravity="left|center"
                android:paddingLeft="8dp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imgParticipant"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:rotation="15"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_category_star"
            android:tint="@color/colorPrimary"
            android:padding="2dp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>