<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/categoriesImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/ic_category_bike"
        android:tint="@color/colorPrimaryDark"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/categoriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Piłka nożna"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/categoriesImage"
        android:paddingLeft="11dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp" />

    <ImageView
        android:id="@+id/categoriesStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_category_star_outline"
        android:tint="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/categoriesText"
        android:layout_alignParentEnd="true"
        android:padding="16dp" />



</RelativeLayout>