<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/custom_activated_background</item>
        <item name="android:actionMenuTextAppearance">@style/MenuText</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MenuText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/keyline_1</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_12</item>
    </style>

    <style name="Subheader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="FormIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/keyline_1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="FormTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
